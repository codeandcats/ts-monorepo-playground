    "strict": true,
    "target": "ES3",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@mono/shared/*": ["../shared/src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
